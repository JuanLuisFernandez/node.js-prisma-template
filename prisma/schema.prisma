generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kurs {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  isClassroom     Boolean  @default(false)
  isOnline        Boolean  @default(false)
  startDate       DateTime
  endDate         DateTime
  duration        String
  minParticipants Int
  maxParticipants Int
  price           Int
  book            String?
  createdAt       DateTime @default(now())
}
